{
  "name": "Zapia",
  "version": "1.0.0",
  "manifest_version": 1,
  "author": "mtmzll",
  "description": "Um sistema de rolagem de dados com ferramentas para a criação de situações complexas.",
  "icon": "/zapia-icon.png",
  "action": {
    "title": "Zapia",
    "icon": "/twenty-sided-dice.svg",
    "popover": "/",
    "height": 600,
    "width": 400
  },
  "background_url": "https://zapia.vercel.app/owlbear-background-script",
  "permissions": [
    {
      "name": "clipboard-write",
      "reason": "Exporting spaces"
    },
    {
      "name": "clipboard-read",
      "reason": "Importing spaces"
    }
  ]
}
